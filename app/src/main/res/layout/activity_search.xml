<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.student.drugproducts.search"
    android:background="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the active drug's name"
        android:id="@+id/enterDrug"
        android:textColor="#ffff0202" />

    <AutoCompleteTextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/auto_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/enterDrug"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Class: "
        android:id="@+id/drugClass"
        android:layout_below="@+id/cateName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/className"
        android:singleLine="false"
        android:background="#ffff0111"
        android:layout_alignTop="@+id/drugClass"
        android:layout_toRightOf="@+id/categorization"
        android:layout_toEndOf="@+id/categorization"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Categorization: "
        android:id="@+id/categorization"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/auto_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:id="@+id/cateName"
        android:background="#ffff0111"
        android:layout_alignTop="@+id/categorization"
        android:layout_toRightOf="@+id/categorization"
        android:layout_toEndOf="@+id/categorization"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Drug ID: "
        android:id="@+id/drugId"
        android:layout_below="@+id/className"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/drugIdName"
        android:singleLine="false"
        android:background="#ffff0111"
        android:layout_alignTop="@+id/drugId"
        android:layout_alignLeft="@+id/className"
        android:layout_alignStart="@+id/className"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Pediatric Flag: "
        android:id="@+id/pediatric"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/drugId"
        android:layout_alignRight="@+id/comp"
        android:layout_alignEnd="@+id/comp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="28dp"
        android:id="@+id/pediatricName"
        android:singleLine="false"
        android:background="#ffff0111"
        android:layout_alignTop="@+id/pediatric"
        android:layout_toRightOf="@+id/ais"
        android:layout_toEndOf="@+id/ais"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Number of AIS: "
        android:id="@+id/ais"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/pediatricName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/aisName"
        android:singleLine="false"
        android:background="#ffff0111"
        android:layout_alignTop="@+id/ais"
        android:layout_toRightOf="@+id/ais"
        android:layout_toEndOf="@+id/ais"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Address: "
        android:id="@+id/address"
        android:layout_below="@+id/comp_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:id="@+id/addressName"
        android:singleLine="false"
        android:background="#ffff0111"
        android:layout_alignTop="@+id/address"
        android:layout_alignLeft="@+id/comp_name"
        android:layout_alignStart="@+id/comp_name"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Company: "
        android:id="@+id/comp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/aisName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:id="@+id/comp_name"
        android:singleLine="false"
        android:background="#ffff0111"
        android:layout_alignTop="@+id/comp"
        android:layout_alignLeft="@+id/aisName"
        android:layout_alignStart="@+id/aisName"
        android:textColor="#ffffffff" />

</RelativeLayout>
