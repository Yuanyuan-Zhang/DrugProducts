<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.student.drugproducts.search"
    android:background="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the inactive drug's name"
        android:id="@+id/enterDrug_ia"
        android:textColor="#ffff0507" />

    <AutoCompleteTextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/auto_name_ia"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/enterDrug_ia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Class: "
        android:id="@+id/drugClass_is"
        android:layout_below="@+id/categorization_ia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/className_ia"
        android:singleLine="false"
        android:background="#ffff0111"
        android:layout_above="@+id/drugId_ia"
        android:layout_alignLeft="@+id/pediatricName_ia"
        android:layout_alignStart="@+id/pediatricName_ia"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Categorization: "
        android:id="@+id/categorization_ia"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/auto_name_ia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:id="@+id/cateName_ia"
        android:background="#ffff0111"
        android:layout_alignTop="@+id/categorization_ia"
        android:layout_alignLeft="@+id/className_ia"
        android:layout_alignStart="@+id/className_ia"
        android:textColor="#ffffffff"
        android:layout_above="@+id/drugClass_is" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Drug ID: "
        android:id="@+id/drugId_ia"
        android:layout_below="@+id/drugClass_is"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/drugIdName_ia"
        android:singleLine="false"
        android:background="#ffff0111"
        android:layout_alignTop="@+id/drugId_ia"
        android:layout_alignLeft="@+id/className_ia"
        android:layout_alignStart="@+id/className_ia"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Pediatric Flag: "
        android:id="@+id/pediatric_ia"
        android:layout_below="@+id/drugId_ia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="28dp"
        android:id="@+id/pediatricName_ia"
        android:singleLine="false"
        android:background="#ffff0111"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/pediatric_ia"
        android:layout_toRightOf="@+id/ais_ia"
        android:layout_toEndOf="@+id/ais_ia" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Number of AIS: "
        android:id="@+id/ais_ia"
        android:layout_alignTop="@+id/aisName_ia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/aisName_ia"
        android:singleLine="false"
        android:background="#ffff0111"
        android:layout_below="@+id/pediatricName_ia"
        android:layout_toRightOf="@+id/ais_ia"
        android:layout_toEndOf="@+id/ais_ia"
        android:layout_marginTop="15dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Address: "
        android:id="@+id/address_ia"
        android:layout_below="@+id/comp_name_ia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:id="@+id/addressName_ia"
        android:singleLine="false"
        android:background="#ffff0111"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/address_ia"
        android:layout_alignLeft="@+id/comp_name_ia"
        android:layout_alignStart="@+id/comp_name_ia" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Company: "
        android:id="@+id/comp_ia"
        android:layout_below="@+id/ais_ia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:id="@+id/comp_name_ia"
        android:singleLine="false"
        android:background="#ffff0111"
        android:layout_alignTop="@+id/comp_ia"
        android:layout_toRightOf="@+id/ais_ia"
        android:layout_toEndOf="@+id/ais_ia"
        android:textColor="#ffffffff" />

</RelativeLayout>
